daemon off;

worker_processes <%= ENV['NGINX_WORKERS'] || 4 %>;

events {
    use epoll;
    accept_mutex on;
    worker_connections 1024;
}

http {

	gzip on;
	gzip_comp_level 2;
	gzip_min_legth 512;
	server_tokens off;

	log_format main '$time_iso8601 - $status $request - client IP: $http_x_forwarded_for - to $upstream_addr - upstream status: $upstream_status, upstream_response_time $upstream_response_time, request_time $request_time';
    access_log /dev/stdout main;
    # set the following to "debug" when diagnosing an issue
    error_log /dev/stdout notice;
    log_not_found on;

    #include mime.types;
    default_type application/octet-stream;
    sendfile on;

    # Must read the body in 5 seconds.
    client_body_timeout <%= ENV['NGINX_CLIENT_BODY_TIMEOUT'] || 5 %>;

    # handle SNI
    proxy_ssl_server_name on;
    # resolver needs to be set because we're using dynamic proxy_pass
    resolver 8.8.8.8;

    upstream backend {
		server prx1proton.herokuapp.com:443;
        # server 0.0.0.0:5001;
		# server 0.0.0.0:5002;
		# server 0.0.0.0:5003;
    }

	server {
		listen <%= ENV["PORT"] %>;
		server_name _;

		location / {
			proxy_pass https://backend;
            proxy_ssl_name $http_host;
            proxy_set_header x-forwarded-host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header Host $http_host;
		}
	}
}